#include <iostream>
using namespace std;

int main()
{
char o;
float n1, n2;

cout << "Enter an operator: +, -, *, /\n";
cin >> o;

cout << "Enter two numbers: ";
cin >> n1 >> n2;

switch(o)
{
 case '+':
 cout << n1 << "+" << n2 << "= " << n1 + n2;
 break;
 
 case '-':
 cout << n1 << "-" << n2 << "= " << n1 - n2;
 break;
 
 case '*':
 cout << n1 << "*" << n2 << "= " << n1 * n2;
 break;
 
 case '/':
 cout << n1 << "/" << n2 << "= " << n1 / n2;
 break;
 
 default:
 cout << "Error! Wrong operator!";
 break;
}
return 0;    
}
